<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/contact_icon_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Displays the phone number of the sender and the contents of the message -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/phone_number_display_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/message_display_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Displays the time the message was sent -->
    <TextView
        android:id="@+id/time_display_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>